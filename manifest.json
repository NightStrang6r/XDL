{
    "manifest_version": 2,
    "name": "XDL",
    "author": "NightStranger",
    "description": "DLNURE helper",
    "version": "0.2",
    "icons": {"64": "logo.png"},
    "browser_action": {
            "default_icon": "logo.png",
            "default_popup": "popup.html"
        },
    "background": {
        "scripts": [
            "jquery-3.0.0.js",
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://dl.nure.ua/",
                "https://dl.nure.ua/*"
            ],
            "js": [
                "jquery-3.0.0.js",
                "main.js"
            ]
        }
    ],
    "permissions": [
        "tabs"
    ],
    "content_security_policy": "script-src 'self' https://example.com; object-src 'self'"
}